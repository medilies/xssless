{
    "name": "medilies/xssless",
    "description": "Sanitize your HTML against XSS threats.",
    "keywords": [
        "medilies",
        "laravel",
        "xssless"
    ],
    "homepage": "https://github.com/medilies/xssless",
    "license": "MIT",
    "authors": [
        {
            "name": "medilies",
            "email": "medilies.contact@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.9",
        "spatie/laravel-package-tools": "^1.16",
        "symfony/process": "^7.1"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.11",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "symfony/var-dumper": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "Medilies\\Xssless\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Medilies\\Xssless\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Medilies\\Xssless\\XsslessServiceProvider"
            ],
            "aliases": {
                "Xssless": "Medilies\\Xssless\\Facades\\Xssless"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}